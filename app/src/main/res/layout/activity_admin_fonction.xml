<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_fonction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/afde"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/allura"
            android:gravity="center"
            android:text="Welcome Admin "
            android:textColor="#503E3E"
            android:textSize="30sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="50dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text_check"
                        android:layout_width="wrap_content"
                        android:layout_height="74dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginEnd="181dp"
                        android:layout_marginRight="181dp"
                        android:layout_marginBottom="9dp"
                        android:fontFamily="sans-serif"
                        android:text="Check and approve new posts"
                        android:textColor="#F30F31"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/validate_posts"
                        android:layout_width="83dp"
                        android:layout_height="76dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="257dp"
                        android:layout_marginLeft="257dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginEnd="71dp"
                        android:layout_marginRight="71dp"
                        android:layout_marginBottom="7dp"
                        android:layout_toLeftOf="@+id/text_donate"
                        android:background="@color/white"
                        android:scaleType="fitStart"
                        android:src="@drawable/verify"
                        android:tint="#F30F31" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="60dp"
                app:cardElevation="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text_order"
                        android:layout_width="167dp"
                        android:layout_height="62dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginEnd="211dp"
                        android:layout_marginRight="211dp"
                        android:layout_marginBottom="21dp"
                        android:fontFamily="sans-serif"
                        android:text="Check orders"
                        android:textColor="#F30F31"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/check_orders"
                        android:layout_width="78dp"
                        android:layout_height="55dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="259dp"
                        android:layout_marginLeft="259dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginEnd="74dp"
                        android:layout_marginRight="74dp"
                        android:layout_marginBottom="20dp"
                        android:layout_toLeftOf="@+id/text_donate"
                        android:background="@color/white"
                        android:scaleType="fitStart"
                        android:src="@drawable/skip_icon_24"
                        android:tint="#F30F31" />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <Button
            android:id="@+id/logout"
            android:layout_width="56dp"
            android:layout_height="54dp"
            android:layout_marginStart="170dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="60dp"
            android:background="@android:color/transparent"
            android:foreground="@android:drawable/ic_lock_power_off" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>