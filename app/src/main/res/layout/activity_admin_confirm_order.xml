<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin_confirm_order">

    <RelativeLayout
        android:id="@+id/new_orders"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@color/colorPrimary"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="150dp"
            android:layout_marginRight="150dp"
            android:gravity="center"
            android:text="new orders"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:theme="@style/Theme.GoHealthlyApplication" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ordersListe"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_below="@+id/new_orders"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/new_orders"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>