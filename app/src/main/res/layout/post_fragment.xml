<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/afde"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="124dp"
            android:layout_height="119dp"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_medc"
                android:layout_width="132dp"
                android:layout_height="124dp"
                app:srcCompat="@drawable/imageview" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="72dp"
            android:layout_height="69dp"
            android:layout_marginStart="150dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/button6"
                android:layout_width="68dp"
                android:layout_height="67dp"
                android:layout_marginRight="10dp"

                android:background="@android:color/transparent"
                android:foreground="@drawable/arddm"
                android:scaleType="fitXY" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <ImageView
                    android:id="@+id/equipement_name"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/medicine" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/equipement_name"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/equipement_name"
                    android:hint="Stuff Name"
                    android:paddingLeft="40dp"
                    android:textSize="15sp"
                    android:theme="@style/Theme.GoHealthlyApplication" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <ImageView
                    android:id="@+id/equipement_description"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/description" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/equipement_description"
                    android:theme="@style/Theme.GoHealthlyApplication"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/equipement_description"
                    android:hint="Stuff description"
                    android:paddingLeft="40dp"
                    android:textSize="15sp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp">

                <ImageView
                    android:id="@+id/price"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="15dp"
                    app:srcCompat="@drawable/tag"
                    app:tint="#F45656" />

                <EditText
                    android:id="@+id/price_id"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/price"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/price"
                    android:hint="price"
                    android:paddingLeft="40dp"
                    android:theme="@style/Theme.GoHealthlyApplication"
                    android:textSize="15sp" />

            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/upload"
            android:layout_width="47dp"
            android:layout_height="48dp"
            android:layout_marginStart="170dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/background_button"
            android:fontFamily="sans-serif-black"
            android:text="Up"
            android:textSize="10sp"
            android:textStyle="bold"
            app:backgroundTint="#DF1102"
            app:cornerRadius="90dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>